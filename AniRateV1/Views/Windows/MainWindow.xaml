<Window x:Class="AniRateV1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AniRateV1"
        xmlns:vm="clr-namespace:AniRateV1.ViewModels"
        xmlns:decanat="clr-namespace:AniRateV1.Models"
        xmlns:cmd="clr-namespace:AniRateV1.Infrostructure.Commands"
        mc:Ignorable="d"
        Title="AniRate" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл"/>
            <MenuItem Header="Выход"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Status" MinWidth="150" MaxWidth="300" />
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar Width="120" Height="14" Value="30" />
            </StatusBarItem>
        </StatusBar>
        <TabControl>
            <TabItem Header="Тайтлы1">
                
            </TabItem>
            <TabItem Header="Тайтлы2">

            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
